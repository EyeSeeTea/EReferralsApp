<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/radio_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />


        <org.eyeseetea.sdk.presentation.views.CustomRadioButton
            android:id="@+id/radio_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@null"
            android:gravity="left|center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="75dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="?attr/font_medium"
            app:font_name="@string/normal_font" />


    </RelativeLayout>

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/counter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:lines="1"
        android:padding="5dip"
        android:textColor="@color/black"
        android:textSize="?attr/font_small"
        android:visibility="gone"
        app:font_name="@string/normal_font" />
</LinearLayout>
